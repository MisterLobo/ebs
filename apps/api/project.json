{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/api/",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/api/src/",
        "command": "go build -race -o ../dist/packages/api ./*.go"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/api/src/",
        "command": "air --build.cmd \"go build -race -o tmp/main ./*.go\""
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/api/src/",
        "command": "go test -race"
      }
    }
  },
  "tags": []
}